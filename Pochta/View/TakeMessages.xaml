<UserControl x:Class="Pochta.View.TakeMessages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pochta.View"
             xmlns:viewModel="clr-namespace:Pochta.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="622"
             Style="{StaticResource PageStyle}">
    <Border CornerRadius="20">
        <ListView  x:Name="Messages" Margin="0,0,20,0" Background="#212529" Foreground="White">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Полученные сообщения" >
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Emails}" Header="Email" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Subjects}" Header="Тема" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Textx}" Header="Текст сообщения" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Border>
</UserControl>
