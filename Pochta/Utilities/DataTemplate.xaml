<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Pochta.ViewModel"
             xmlns:local="clr-namespace:Pochta.Utilities"
             xmlns:view="clr-namespace:Pochta.View">

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <view:Home/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SendMessageViewModel}">
        <view:SendMessage/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TakeMessagesViewModel}">
        <view:TakeMessages/>
    </DataTemplate>
    
</ResourceDictionary>
